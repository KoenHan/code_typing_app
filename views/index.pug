  form(action="/gh_url" method="POST")
    .input-group.w-75
      |
      input.form-control.ml-5(
        type="search",
        name="url",
        list="samples",
        placeholder="URLを入力してください．")
      datalist(id="samples")
        option(value="sample.cpp")
        option(value="sample.py")
      |
      .input-group-append
        input.btn.btn-color(type="submit", value="練習する")
    |
    if gh_url_se
      .text-danger.ml-5 #{gh_url_em}
  br
  form(action="/upload", method="POST", enctype="multipart/form-data")
    .input-group.w-75
      |
      input.form-control.ml-5(
        type="file",
        name="file",
        placeholder="ファイルをアップロードをしてください．")
      |
      .input-group-append
        input.btn.btn-color(type="submit", value="アップロード")
    |
    if upload_se
      .text-danger.ml-5 #{upload_em}
