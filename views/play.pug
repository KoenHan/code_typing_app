extends layout

block content
  div
    |
    .lm-out
      #limit_message.form-inline.lm-in
        |
        label.my-1.mr-2.h6(for="selected_limit_time") タイピング時間：
        |
        select#selected_limit_time.custom-select.my-1.mr-sm-2(name="limit_time")
          option(value="0", selected="selected") なし
          option(value="10") 10秒
          option(value="30") 30秒
          option(value="60") 60秒
          option(value="90") 90秒
    |
    h6#start_message.text-align.text-center.mb-5 spaceを押すとスタートします．
    |
    h1#start_countdown.text-center
    |
    h6#displayed_countdown.text-center
    |
    #displayed_score.text-center
  pre#code.code.bg-white.card
    .card-body
      |
      #typed_lines
      |
      #target_line
      |
      #untyped_lines

  script(type='text/javascript', src='https://code.jquery.com/jquery-3.0.0.min.js')
  script(
    type='text/javascript',
    src='/javascripts/code_typing.js',
    id='main',
    data-texts=texts,
    data-ext=ext)
  script(src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.15.10/highlight.min.js")
  script.
    hljs.initHighlightingOnLoad();